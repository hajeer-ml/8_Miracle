<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navbar">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navbar"
        android:layout_alignParentTop="true"/>


    <com.nafis.bottomnavigation.NafisBottomNavigation
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:background="@color/Beige"
        app:mbn_backgroundBottomColor="@color/Brown1"
        app:mbn_circleColor="@color/Brown1"
        app:mbn_countBackgroundColor="@color/Beige"
        app:mbn_countTextColor="@color/Brown3"
        app:mbn_countTypeface="fonts/SourceSansPro-Regular.ttf"
        app:mbn_defaultIconColor="@color/Brown3"
        app:mbn_hasAnimation="true"
        app:mbn_rippleColor="@color/Brown3"
        app:mbn_selectedIconColor="@color/Beige"
        app:mbn_shadowColor="@color/white" />

</RelativeLayout>