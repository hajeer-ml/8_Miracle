<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hut"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cart_recycler"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Brown1"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery:"
            android:fontFamily="@font/pacifico"
            android:textColor="@color/Brown3"
            android:textStyle="bold"
            android:textSize="25sp" />

        <RadioGroup
            android:id="@+id/delivery_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/Brown3"
            android:outlineSpotShadowColor="@color/Brown3"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/delivery_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The office"
                android:textSize="20sp"
                android:fontFamily="@font/adlam_display"
                android:textColor="@color/Brown3" />

            <RadioButton
                android:id="@+id/delivery_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The home"
                android:textSize="20sp"
                android:fontFamily="@font/adlam_display"
                android:textColor="@color/Brown3" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wilaya:"
            android:fontFamily="@font/pacifico"
            android:textColor="@color/Brown3"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/wilaya_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:fontFamily="@font/adlam_display"
            android:textColor="@color/Brown3"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/delivery_cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Cost: "
            android:fontFamily="@font/pacifico"
            android:textColor="@color/Brown3"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Brown3"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal:"
                android:fontFamily="@font/pacifico"
                android:textColor="@color/Brown3"
                android:textStyle="bold"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/subtotal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/adlam_display"
                android:textColor="@color/Brown3"/>
        </LinearLayout>

        <Button
            android:id="@+id/checkout_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Check out"
            android:fontFamily="@font/pacifico"
            android:textColor="@color/Beige"
            android:textStyle="bold"
            android:textSize="25sp"
            android:backgroundTint="@color/Brown3"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>